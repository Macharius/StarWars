<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="colorControlHighlight">@color/color_control_highlight</item>
    </style>

    <style name="AppTheme.TransparentActionBar" parent="AppTheme">
        <item name="actionBarStyle">@style/TransparentActionBar</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="TransparentActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="DetailLabel">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">0.7sp</item>
        <item name="android:textColor">@color/warm_grey</item>
    </style>

    <style name="DetailValue">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.19</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
